<!-- Header navbar-fixed-top -->
<div class="navbar navbar-default" style="margin-bottom:0px;">

	<div class="container header_menu_bar">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand logo" href="<%= root_url%>"> <img src="<%= image_path "logo.png"%>"> </a>
		</div>
		<div class="navbar-collapse collapse">

			<ul class="nav navbar-nav navbar-right">
				<li class="dropdown">
					<a href="#" class="dropdown-toggle <%="active" if params[:controller] == 'site' && params[:action] == 'topic'%>" data-toggle="dropdown">Topic: <%=@last_topic%><b class="caret"></b></a>
					<ul class="dropdown-menu">
						<% @header_categories.each do |category| %>
						<li class="<%= "dropdown-submenu" if category[:submenu].any?%>">
							<a href="#"><%= category[:menu]%></a>
							<% if category[:submenu].any? %>
							<ul class="dropdown-menu">
								<% category[:submenu].each do |menu| %>
								<li>
									<%= link_to(menu, "#")%>
								</li>
								<% end %>
							</ul>
							<% end %>
						</li>
						<% end %>
					</ul>
				</li>
				<li>
					<%=link_to("Influencers", url_for(:controller => "site", :action => "influencers"), :html => {:class => (params[:controller] == 'site' && params[:action] == 'influencers' ? "active" : "")})%>
				</li>
				<li>
					<%=link_to("Trends", url_for(:controller => "site", :action => "conversation"), :html => {:class => (params[:controller] == 'site' && params[:action] == 'conversation' ? "active" : "")})%>
				</li>
				<li>
					<%=link_to("Timeline", url_for(:controller => "site", :action => "timeline"), :html => {:class => (params[:controller] == 'site' && params[:action] == 'timeline' ? "active" : "")})%>
				</li>
				<li class="dropdown">
					<a href="" class="dropdown-toggle for_vatar" data-toggle="dropdown"> <span class="avatar" style="background-image: url(<%= image_path("icon/default_avatar.png")%>);"> </span> <b class="caret"></b> </a>
					<ul class="dropdown-menu">

						<li>
							<%= link_to("User Profile", "#")%>
						</li>
						<li>
							<%= link_to("About Us", "#")%>
						</li>
						<li>
							<%= link_to("We're Hiring", "#")%>
						</li>
						<li>
							<%= link_to('Investors', '#') %>
						</li>
						<li class="divider"></li>
						<li>
							<%= link_to('Logout', '#') %>
						</li>
					</ul>
				</li>

			</ul>

		</div>
	</div>

</div>
<!-- End Header -->

